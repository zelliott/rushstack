{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Rush Debug",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/libraries/rush-lib/lib/start.js",
			"stopOnEntry": true,
			"args": [
				"rebuild",
				"-o",
				"api-extractor-scenarios"
			],
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy",
				"--inspect-brk"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Selected Test File (Heft)",
			"cwd": "${fileDirname}",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceFolder}/apps/heft/lib/start.js",
				"--debug",
				"test",
				"--test-path-pattern",
				"${fileBasenameNoExtension}"
			],
			"skipFiles": ["<node_internals>/**"],
			"outFiles": [],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 5858
		}
	]
}
